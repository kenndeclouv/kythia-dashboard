datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-1.1.x", "rhel-openssl-3.0.x"]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model License {
  id        String   @id @default(cuid())
  key       String   @unique
  ownerId   String
  isActive  Boolean  @default(true)

  boundClientId String?

  hwid      String?  @db.Text
  ipAddress String?
  config    String?  @db.LongText

  lastUsed  DateTime @default(now())
  createdAt DateTime @default(now())
  logs      TelemetryLog[]
}

model TelemetryLog {
  id        String   @id @default(cuid())
  licenseId String
  level     String
  message   String   @db.Text      // Saran: message juga ganti Text biar aman
  metadata  String?  @db.LongText  // Saran: metadata juga ganti LongText
  createdAt DateTime @default(now())
  license   License  @relation(fields: [licenseId], references: [id], onDelete: Cascade)
}
